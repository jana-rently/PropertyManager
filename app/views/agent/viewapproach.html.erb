
<style>


table {
  border-collapse: collapse;
  width: 75%;
  margin-left:13%;
}

th, td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

tr:hover {background-color:  #f2f2f2;}

</style>

<ul>
  <li><%= link_to "back", display_prop_path,style:'color:white'%></li>
   <li style="float:right"><%= link_to "logout", destroy_agent_session_path, method: :delete ,style:'color:white'%></li>
</ul>
<div style="text-align:center">Renters who are applied for this property</div>
<br>
<table width="50%" cellspacing="0">
<thead>
<th width="60">Renter Name</th>
<th width="120">Email</th>
<th width="50">Contact</th>
<th width="50">Status</th>
</thead>
<tbody>
<%@approachlist.each do |approach|%>
<% @rentername=Renter.find(approach.renter_id)%>
<%#for dipsplay buttons%>
<tr>
<td><%= @rentername.name%></td>
<td><%=@rentername.email%></td>
<td><%=@rentername.contact%></td>
<% if @property.flag == 1%>
<% if @rentedp.renter_id == @rentername.id%>
<td><%="Already Accepted"%></td>
<%else%>
<td><%="NIL"%></td>
<%end%>
<%else%>
<td><%=link_to "Accept",addrentedprop_path(approach)%></td>
<%end%>
</tr>
<%end%>

</tbody>
</table>