<style>
    .codehim-form{
        max-width: 400px;
        min-height: 400px;
        box-sizing: border-box;
        background: rgba(255, 255, 255, 0.6);
        box-shadow: 4px 2px 16px rgba(0, 0, 0, 0.4);
        border-radius: 8px;
        margin:  20px auto 0 auto;
        padding: 25px;
        color: #414141;
            
    }  
</style>

<div style="color:red;margin-left:80%">
<% if @agent.errors.any? %>
  <% @agent.errors.messages.each do |message| %>
    <div class="message"><%= message.last.last.html_safe %></div>
  <% end %>
<% end %>
</div>
<br><br>
<div class="makecenter"> Create Admin</div>
<br>
<div class="codehim-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  			
        	<br><br>
          
			<div class="group">
					
					<%= f.label :name ,class: "label"%>
					<%= f.text_field :name, class: "cm-input"%>

				<%= f.label :address,class: "label"%>
				
 				<%= f.text_area :address, class: "cm-input"%>
 
				<%= f.label :contact, class: "label"%> 
				
				<%= f.text_field :contact, class: "cm-input"%>

  				<%= f.label :email , class: "label"%>
  				
    			<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "cm-input" %>

    			 <%= f.label :password, class: "label" %>    
    	
			<% if @minimum_password_length %>
    		<em>(<%= @minimum_password_length %> characters minimum)</em>
    		<% end %><br />
    		
    		<%= f.password_field :password, autocomplete: "new-password", class: "cm-input" %>
  			 <br>
    			
    		 <%= f.label :password_confirmation ,class: "label"%><br />
    		
   			 <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "cm-input" %>
   			 </div>
   <hr>			<%= f.hidden_field :role, value: 'Admin' %>
   				<%#@company=Company.last%>
   				<%= f.hidden_field :company_id, value: params[:company_id]  %>
            	         


		<div class="actions">
    <div class="group">
    	<%= f.submit "Create", class: "btn-login gr-bg" %>
<span class="right"> 
<%end%>
		</div>
