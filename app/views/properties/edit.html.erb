<html>
<head>
  
  <style >

.dd{
  color:red;
  font-size:95%;
  margin-left:75%;
}
.widths{
  width:50%;
  text-align:center;
}
</style>
</head>
<body>
<br><br>
<div class="makecenter"> Edit Property</div>
<div >
<% if @property.errors.any? %>
  <div id="error_explanation">
    <% @property.errors.full_messages.each do |msg| %>
      <li style="font-size:15px;margin-left:10%"><%= msg %></li>
    <% end %>
  </div>
  <% end %>
</div>
<div class="codehim-form">
<%= form_for :property, url: property_path(@property), method: :patch do |f| %>
        
          <br><br>
          
      <div class="group">
      <p>
    <%= f.label :name ,class:"label"%>
    <%= f.text_field :name, class:"cm-input" %>
    </p>
    
  <p>
    <%= f.label :address ,class:"label"%>
    <%= f.text_field :address , class:"cm-input"%>
  </p>
     
  <p>
    <%= f.label :city,class:"label"%><br>
    <%= f.text_field :city, class:"cm-input"%>
  </p>
     
  <p>
  <div><span class="label" >Rent($)</span> &nbsp <span style="margin-left:47%">Bedrooms</span></div>

   <%= f.number_field :rent, class:"cm-input",style:'width:25%;margin-left:-0.1%'%>
    <%=f.text_field :bedrooms, class:"cm-input",style:'width:25%;margin-top: -12%;margin-left:70%'%> 
  </p>
  <p>
    <%= f.label :description, class:"label"%><br>
    <%= f.text_area :description, class:"cm-input" %>
  </p>

  <p>
<%= f.label :Addimages,class:"label"%>
 <%= f.file_field :images, multiple: true ,class:"cm-input"%>
 </p>
 <p class="btn-login gr-bg widths">
 <%= link_to "Delete images",delimage_path(@property)%>
 </p>
  <br>
    <%= f.submit  "Save Changes" ,class:"btn-login gr-bg"%>
 
<% end %>
  