<body>
<h1 class="heading"> Forgot your password?</h1>
<br>
<div class="login-wrap">

	<div class="login-form">
	<div class="sign-in-htm">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="group">
<br>
 <%= render "renters/shared/error_messages", resource: resource %>
<br>
<br>
  <div class="field">
    <%= f.label :email ,class: "label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "input" %>
  </div>
<br>
<br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions" ,class: "btnr" %>
  </div>
<% end %>
<br>
<br>
<div class="center">
<%= render "renters/shared/links" %>
</div>
<body>
</html>
